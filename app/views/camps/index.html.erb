<div class="container">
  <div class="row">
    <div class="cards">
      <% @camps.each do |camp| %>
        <div class="col-xs-12 col-md-3">
          <%= link_to camp_path(camp) do  %>
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path camp.photo, height: 300, width: 400, crop: :fill %>');">
                <div class="card-category"><%= camp.name %></div>
                <div class="card-description">
                <p><%= camp.description %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


