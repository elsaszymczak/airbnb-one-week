<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="form">
        <%= simple_form_for @camp do |f| %>
          <h3 class='text-center'>Add a new camp</h3>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :location %>
          <%= f.submit 'Add a camp', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
